<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/dark_gray</item>
        <item name="colorAccent">@color/gold</item>
    </style>

    <style name="MenuButton">
        <item name="android:background">@color/sapphire</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MenuButton.Dynamic">
        <item name="android:gravity">center</item>
        <item name="android:textSize">32dp</item>
    </style>

    <style name="MenuButton.Dynamic.Small">
        <item name="android:textSize">20dp</item>
        <item name="android:layout_height">@dimen/history_button_height</item>
        <item name="android:height">@dimen/history_button_height</item>
    </style>

    <style name="ContinueButton">
        <item name="android:background">@color/gold</item>
        <item name="android:textColor">@color/silver</item>
    </style>

    <style name="PokemonLabel">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/silver</item>
    </style>

    <style name="DataLabel">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/gold</item>
    </style>

    <style name="Overlay">
        <item name="android:background">@color/clear_black</item>
    </style>

    <style name="ScoreButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:height">@dimen/score_button_height</item>
    </style>

    <style name="ScoreButtonStyle.OddTeam">
        <item name="android:background">@color/red</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ScoreButtonStyle.EvenTeam">
        <item name="android:background">@color/blue</item>
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="HeaderText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="HeaderText.Background">
        <item name="android:background">@color/black</item>
    </style>

    <style name="HeaderText.Emerald">
        <item name="android:textColor">@color/emerald</item>
    </style>

    <style name="HeaderText.Small">
        <item name="android:textSize">24dp</item>
    </style>

    <style name="HeaderText.XSmall">
        <item name="android:textSize">18dp</item>
    </style>

    <style name="SubtitleText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="SubtitleText.Background">
        <item name="android:textColor">@color/diamond</item>
        <item name="android:background">@color/emerald</item>
    </style>

    <style name="DefaultText">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DefaultText.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DefaultText.Black.Left">
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="DefaultText.Black.Left.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DefaultText.Gold">
        <item name="android:textColor">@color/gold</item>
    </style>

    <style name="DefaultText.Small">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="DefaultText.Large">
        <item name="android:textSize">27dp</item>
    </style>

    <style name="DefaultText.Large.Gold">
        <item name="android:textColor">@color/gold</item>
    </style>

    <style name="StatHeaderLabel">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/platinum</item>
    </style>

    <style name="StatDataLabel">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="NameDialogColorScheme">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHighlight">@color/blue</item>
        <item name="android:textColorHint">@color/blue</item>
        <item name="android:textColorLink">@color/blue</item>
        <item name="android:textCursorDrawable">@color/blue</item>
    </style>

    <style name="ListItem">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/platinum</item>
    </style>

    <style name="Container">
        <item name="android:background">@color/dark_gray</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>